{
  "name": "edge",
  "displayName": "Edge template support",
  "description": "Edge template support and syntax highlight support",
  "version": "0.3.2",
  "publisher": "luongnd",
  "author": {
    "name": "Duy Luong",
    "email": "duyluonglc@gmail.com"
  },
  "homepage": "https://github.com/duyluonglc/vscode-edge",
  "repository": {
    "type": "git",
    "url": "https://github.com/duyluonglc/vscode-edge"
  },
  "bugs": {
    "url": "https://github.com/duyluonglc/vscode-edge/issues"
  },
  "engines": {
    "vscode": "^1.16.0"
  },
  "keywords": [
    "adonis",
    "edge",
    "template",
    "snippet",
    "formatter"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#f66f62",
    "theme": "dark"
  },
  "categories": [
    "Languages",
    "Snippets",
    "Formatters"
  ],
  "main": "./out/src/extension",
  "scripts": {
    "build-srv": "cd ./server && npm install && tsc -p ./",
    "vscode:prepublish": "tsc -p ./ && pushd \"./\" && npm run build-srv && popd",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "contributes": {
    "languages": [
      {
        "id": "edge",
        "aliases": [
          "Edge Template",
          "Edge",
          "edge"
        ],
        "extensions": [
          ".edge",
          ".edge.html"
        ],
        "configuration": "./edge.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "edge",
        "scopeName": "text.html.edge",
        "path": "./syntaxes/edge.tmLanguage.json",
        "embeddedLanguages": {
          "source.css": "css",
          "source.js": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "edge",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "edge",
        "path": "./snippets/helpers.json"
      }
    ],
    "configuration": {
      "title": "Edge Configuration",
      "properties": {
        "edge.format.enable": {
          "type": "boolean",
          "default": false,
          "description": "Enable format edge file"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:edge"
  ],
  "devDependencies": {
    "@types/node": "^8.0.17",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "vscode-css-languageservice": "^3.0.13",
    "vscode-html-languageservice": "^2.1.12",
    "vscode-languageclient": "^3.5.1",
    "vscode-languageserver-types": "^3.14.0"
  }
}
